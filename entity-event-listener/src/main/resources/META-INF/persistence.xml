<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">

    <persistence-unit name="jpa21:simple-event-listener">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>houseware.learn.jpa21.entityEventListener.simple.Simple</class>
        <properties>
            <property name="hibernate.ejb.naming_strategy"
                      value="houseware.learn.jpa21.metamodel.CrazyHibernate5NamingStrategy"/>
            <property name="hibernate.hbm2ddl.auto" value="create"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.HSQLDialect"/>
            <property name="hibernate.show" value="true"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:hsqldb:mem:jpa21:simple-event-listener"/>
        </properties>
    </persistence-unit>
    <persistence-unit name="jpa21:inherit-event-listener">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>houseware.learn.jpa21.entityEventListener.simple.Simple</class>
        <properties>
            <property name="hibernate.ejb.naming_strategy"
                      value="houseware.learn.jpa21.metamodel.CrazyHibernate5NamingStrategy"/>
            <property name="hibernate.hbm2ddl.auto" value="create"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.HSQLDialect"/>
            <property name="hibernate.show" value="true"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:hsqldb:mem:jpa21:inherit-event-listener"/>
        </properties>
    </persistence-unit>
</persistence>
