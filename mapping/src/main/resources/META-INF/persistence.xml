<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">


    <persistence-unit name="jpa21:simple">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>houseware.learn.jpa21.mapping.simple.SimpleEntity</class>
        <properties>
            <property name="hibernate.hbm2ddl.auto" value="create"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.HSQLDialect"/>
            <property name="hibernate.show" value="true"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:hsqldb:mem:collections"/>
            <property name="javax.persistence.sql-load-script-source" value="simple-import.sql"/>
        </properties>
    </persistence-unit>

    <persistence-unit name="jpa21:collections">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>houseware.learn.jpa21.mapping.collections.Employee</class>
        <class>houseware.learn.jpa21.mapping.collections.Phone</class>
        <properties>
            <property name="hibernate.hbm2ddl.auto" value="create"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.HSQLDialect"/>
            <property name="hibernate.show" value="true"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:hsqldb:mem:collections"/>
            <property name="javax.persistence.sql-load-script-source" value="collections-import.sql"/>
        </properties>
    </persistence-unit>



    <persistence-unit name="jpa21:relations">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>houseware.learn.jpa21.mapping.relations.Message</class>
        <class>houseware.learn.jpa21.mapping.relations.MessageTag</class>
        <class>houseware.learn.jpa21.mapping.relations.MessageType</class>
        <class>houseware.learn.jpa21.mapping.relations.Sender</class>
        <properties>
            <property name="hibernate.hbm2ddl.auto" value="create"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.HSQLDialect"/>
            <property name="hibernate.show" value="true"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:hsqldb:mem:relations"/>
            <property name="javax.persistence.sql-load-script-source" value="relations-import.sql"/>
        </properties>
    </persistence-unit>

    <persistence-unit name="jpa21:secondary-table">
         <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
         <class>houseware.learn.jpa21.mapping.secondaryTable.UserFull</class>
         <class>houseware.learn.jpa21.mapping.secondaryTable.UserExt</class>
         <class>houseware.learn.jpa21.mapping.secondaryTable.User</class>
        <properties>
            <property name="hibernate.hbm2ddl.auto" value="create"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.HSQLDialect"/>
            <property name="hibernate.show" value="true"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:hsqldb:mem:jpa21:secondary-table"/>
            <property name="hibernate.hbm2ddl.import_files" value="secondary-table-import.sql"/>
            <property name="javax.persistence.sql-load-script-source" value="secondary-table-import.sql"/>
        </properties>
     </persistence-unit>

    <persistence-unit name="jpa21:inheritance">
         <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
         <class>houseware.learn.jpa21.mapping.inheritance.AbstractInheritance</class>
         <class>houseware.learn.jpa21.mapping.inheritance.BasicInheritance</class>
         <class>houseware.learn.jpa21.mapping.inheritance.JoinInheritance</class>
        <properties>
            <property name="hibernate.hbm2ddl.auto" value="create"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.HSQLDialect"/>
            <property name="hibernate.show" value="true"/>
            <property name="hibernate.format" value="true"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:hsqldb:mem:jpa21:inheritance"/>
            <property name="javax.persistence.sql-load-script-source" value="inheritance-import.sql"/>
        </properties>
     </persistence-unit>

    <persistence-unit name="jpa21:polymorphic">
         <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
         <class>houseware.learn.jpa21.mapping.polymorphic.Animal</class>
         <class>houseware.learn.jpa21.mapping.polymorphic.Cat</class>
         <class>houseware.learn.jpa21.mapping.polymorphic.Dog</class>
         <class>houseware.learn.jpa21.mapping.polymorphic.PedigreeDog</class>
        <properties>
            <property name="hibernate.hbm2ddl.auto" value="create"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.HSQLDialect"/>
            <property name="hibernate.show" value="true"/>
            <property name="hibernate.format" value="true"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:hsqldb:mem:jpa21:polymorphic"/>
            <property name="javax.persistence.sql-load-script-source" value="polymorphic-import.sql"/>
        </properties>
     </persistence-unit>
</persistence>
