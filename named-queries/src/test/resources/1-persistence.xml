<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">


    <persistence-unit name="namedQueries1" transaction-type="JTA">
        <jta-data-source>Default JDBC Database</jta-data-source>
        <class>houseware.learn.jpa21.namedQueries.domain.MessageType</class>
        <class>houseware.learn.jpa21.namedQueries.domain.MessageTag</class>
        <class>houseware.learn.jpa21.namedQueries.domain.Message</class>
        <class>houseware.learn.jpa21.namedQueries.domain.User</class>
        <properties>
            <property name="openjpa.InitializeEagerly" value="true"/>
            <property name="openjpa.jdbc.SynchronizeMappings" value="buildSchema"/>
        </properties>
    </persistence-unit>

</persistence>
